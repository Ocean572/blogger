<h1>
  <%= @article.title %>
</h1>

<p>
  <%= @article.body %>
</p><br>

<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p>
  <%= image_tag @article.image.url %>
</p>

<br><br>

<%= link_to "delete", article_path(@article), method: :delete, data: {confirm: "Do you really want to delete the article?"}, style: "position: absolute; bottom: 0;" %>

<%= link_to "edit", edit_article_path(@article), style: "position: absolute; bottom: 0; left: 70px" %>

<%= link_to "back", articles_path, style: "position: absolute; bottom: 0; left: 102.5px" %>

<br><br>

<h3><%= @article.comments.size %> Comments:</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>